<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.upjv.geotrack">

    <!-- Permissions réseau -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Permissions de localisation -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Permission pour le service au premier plan -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Autorisation pour redémarrer le service après reboot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GeoTrack">

        <!-- Clé API Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDb9ICVQS7fDUZ8VIQ2Cu_Bj5wxzaIsP5k" />

        <!-- Activités principales -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".AuthActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".HomeActivity"
            android:exported="false" />

        <!-- Activity pour les détails d’un Journey -->
        <activity
            android:name=".JourneyDetailActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Activity pour créer un nouveau Journey -->
        <activity
            android:name=".CreateJourneyActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

        <!-- Activity de profil utilisateur -->
        <activity
            android:name=".UserProfileActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity" />

        <!-- Activity pour affiche une photo plein écran -->
        <activity
            android:name=".FullScreenPhotoActivity"
            android:exported="false" />

        <!-- Service de localisation en tâche de fond -->
        <service
            android:name=".services.LocationService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="location"
            android:permission="android.permission.FOREGROUND_SERVICE" />

        <!-- Récepteur pour redémarrer le service après reboot ou update -->
        <receiver
            android:name=".services.LocationServiceRestarter"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
