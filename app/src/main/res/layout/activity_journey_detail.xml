<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@drawable/gradient_header_background">

            <TextView
                android:id="@+id/journey_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/status_badge_background"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:elevation="4dp"
                tools:text="COMPLETED" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="48dp"
                android:layout_marginStart="24dp"
                android:background="@drawable/circle_button_background"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                android:elevation="4dp" />

            <TextView
                android:id="@+id/journey_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="32dp"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:shadowColor="#80000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:lineSpacingExtra="4dp"
                tools:text="Summer Road Trip Adventure" />

            <TextView
                android:id="@+id/journey_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/journey_title"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="12dp"
                android:textColor="#E0FFFFFF"
                android:textSize="16sp"
                android:textAlignment="center"
                android:lineSpacingExtra="3dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"
                tools:text="An amazing journey through the countryside with beautiful landscapes" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="32dp"
            android:paddingVertical="24dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/rounded_top_background"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/circle_button_background"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:contentDescription="User Profile Picture"
                android:elevation="4dp"
                tools:src="@drawable/ic_default_profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Journey by"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/user_display_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2D3436"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="John Doe" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Journey Details"
                android:textColor="#2D3436"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="@drawable/subtle_card_background"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:background="#6C5CE7"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DATES"
                        android:textColor="#8A8A8A"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/journey_dates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2D3436"
                        android:textSize="15sp"
                        android:lineSpacingExtra="2dp"
                        tools:text="From Monday, January 15, 2024 to Friday, January 20, 2024" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_calendar"
                    android:alpha="0.6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:background="@drawable/subtle_card_background"
                android:paddingHorizontal="20dp">

                <View
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    android:background="#00CEC9"
                    android:layout_marginEnd="16dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DURATION"
                        android:textColor="#8A8A8A"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/journey_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#2D3436"
                        android:textSize="15sp"
                        tools:text="5 days" />

                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clock"
                    android:alpha="0.6" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="32dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Journey Photos"
                    android:textColor="#2D3436"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/photo_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/counter_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="#6C5CE7"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:text="1 / 5" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/photos_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/photos_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:clipChildren="false" />

                <LinearLayout
                    android:id="@+id/photo_indicators"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="32dp"
                    android:orientation="horizontal"
                    android:visibility="gone" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/no_photos_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_photo_placeholder"
                        android:alpha="0.4"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/no_photos_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No photos captured yet"
                        android:textColor="#8A8A8A"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photos will appear here as you capture them during your journey"
                        android:textColor="#B0B0B0"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textAlignment="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingTop="32dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Route and Locations"
                    android:textColor="#2D3436"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/localisation_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading locations..."
                        android:textSize="12sp"
                        android:textColor="#8A8A8A"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/localisation_range"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="11sp"
                        android:textColor="#B0B0B0"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/map_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/map_container"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:context=".JourneyActivity" /> <LinearLayout
                        android:id="@+id/map_loading_overlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <ProgressBar
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginBottom="12dp"
                            android:indeterminateTint="#6C5CE7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading map..."
                            android:textColor="#8A8A8A"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                        <LinearLayout
                            android:id="@+id/map_no_data_overlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_map_placeholder"
                                android:alpha="0.6"
                                android:layout_marginBottom="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No locations recorded"
                                android:textColor="#8A8A8A"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location data will appear here as you travel"
                                android:textColor="#B0B0B0"
                                android:textSize="12sp"
                                android:gravity="center" />

                        </LinearLayout>

                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/map_controls"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="#F8F9FA"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/btn_center_map"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_button_background"
                            android:src="@drawable/ic_location"
                            android:contentDescription="Center map on route"
                            android:layout_marginEnd="12dp"
                            android:scaleType="centerInside"
                            android:padding="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tap to center map on your journey route"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp" />

                        <ImageButton
                            android:id="@+id/btn_fullscreen_map"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:background="@drawable/circle_button_background"
                            android:src="@drawable/ic_fullscreen"
                            android:contentDescription="View full screen map"
                            android:scaleType="centerInside"
                            android:padding="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>